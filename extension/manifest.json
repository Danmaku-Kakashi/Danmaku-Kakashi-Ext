{
    "name": "Danmaku Kakashi",
    "version": "1.0.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/icons/*"],
            "matches": ["<all_urls>"]
        }
    ]
}